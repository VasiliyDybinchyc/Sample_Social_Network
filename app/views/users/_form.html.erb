<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= button_tag(type: 'submit') do %>
    <%= current_page?(signup_path) ? "Create me!" : "To change yourself" %>
  <% end %>
<% end %>
