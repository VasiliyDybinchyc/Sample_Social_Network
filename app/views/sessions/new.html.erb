<h1>Log in</h1>

<div class="form">
  <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %><br/>
    <%= f.email_field :email, class: 'filed_form_user' %><br/>

    <%= f.label :password %><br/>
    <%= f.password_field :password, class: 'filed_form_user' %><br/>

    <%= f.label :remember_me, class: "checkbox inline" do %><br/>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %><br/>

    <%= button_tag(type: 'submit', id: "button-form" ) do %>
      <span>Log in</span>
    <% end %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
